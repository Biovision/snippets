<% content_for :meta_title, t('.title', title: @entity.title) %>
<% content_for :hide_sidebar, '1' %>

<article class="entity-page">
  <h1><%= @entity.title %></h1>

  <ul class="actions">
    <li><%= create_icon new_news_path %></li>
    <li><%= list_icon admin_news_index_path %></li>
    <% unless @entity.locked? %>
        <li><%= edit_icon edit_news_path(@entity) %></li>
    <% end %>
  </ul>
  <table>
    <tbody>
    <% unless @entity.image.blank? %>
        <tr>
          <td colspan="2">
            <figure>
              <%= image_tag @entity.image.small.url %>
              <figcaption><%= t(:current_image) %></figcaption>
            </figure>
          </td>
        </tr>
    <% end %>
    <tr>
      <th><%= t('activerecord.attributes.news.user') %></th>
      <td><%= user_link @entity.user %></td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.news.post_type') %></th>
      <td><%= t("activerecord.attributes.news.post_types.#{@entity.post_type}") %></td>
    </tr>
    <% unless @entity.region.nil? %>
        <tr>
          <th><%= t('activerecord.attributes.news.region_id') %></th>
          <td><%= link_to @entity.region.name, admin_region_path(@entity.region_id) %></td>
        </tr>
    <% end %>
    <tr>
      <th>Категория</th>
      <td data-url="<%= category_api_news_path(@entity) %>">
        <%= select_tag 'news_category', news_categories_for_site(@entity.category) %>
        <%= button_tag t(:save), type: :button, class: 'hidden', id: 'category-setter' %>
      </td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.news.lead') %></th>
      <td><%= @entity.lead %></td>
    </tr>
    <tr>
      <td colspan="2"><%= render partial: 'admin/news/toggleable', locals: { news: @entity } %></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= t(:view_count, count: @entity.view_count) %>
      </td>
    </tr>
    </tbody>
  </table>

  <div><%= raw @entity.body %></div>
</article>

<script>/*<![CDATA[*/
$(function () {
    var $category_list = $('#news_category');
    var $category_setter = $('#category-setter');

    $category_list.on('change', function () {
        $category_setter.removeClass('hidden');
    });
    $category_setter.on('click', function () {
        var url = $(this).closest('td').data('url');
        var data = {
            category_id: $category_list.val()
        };

        $.ajax({
            url: url,
            method: 'put',
            data: data,
            success: function () {
                $category_setter.addClass('hidden');
            }
        }).fail(handle_ajax_failure);
    });
});
/*]]>*/</script>
