<% content_for :meta_title, t('.title', slug: @entity.slug) %>

<article class="entity-page">
  <h1><%= @entity.slug %></h1>
  <ul class="actions">
    <li><%= back_icon admin_orders_path %></li>
    <li><%= edit_icon edit_order_path(@entity) %></li>
  </ul>

  <table>
    <caption><%= @entity.slug %></caption>
    <tbody>
    <tr>
      <th><%= t('activerecord.attributes.order.status') %></th>
      <td><%= t("activerecord.attributes.order.statuses.#{@entity.status}") %></td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.order.price') %></th>
      <td><span class="price"><%= @entity.price %></span></td>
    </tr>
    <% unless @entity.user.nil? %>
        <tr>
          <th><%= t('activerecord.attributes.order.user') %></th>
          <td><%= admin_user_link(@entity.user) %></td>
        </tr>
    <% end %>
    <% unless @entity.name.blank? %>
        <tr>
          <th><%= t('activerecord.attributes.order.name') %></th>
          <td><%= @entity.name %></td>
        </tr>
    <% end %>
    <% unless @entity.phone.blank? %>
        <tr>
          <th><%= t('activerecord.attributes.order.phone') %></th>
          <td><%= @entity.phone %></td>
        </tr>
    <% end %>
    <% unless @entity.email.blank? %>
        <tr>
          <th><%= t('activerecord.attributes.order.email') %></th>
          <td><%= @entity.email %></td>
        </tr>
    <% end %>
    <% unless @entity.address.blank? %>
        <tr>
          <th><%= t('activerecord.attributes.order.address') %></th>
          <td><%= @entity.address %></td>
        </tr>
    <% end %>
    <% unless @entity.comment.blank? %>
        <tr>
          <th><%= t('activerecord.attributes.order.comment') %></th>
          <td><%= simple_format(@entity.comment) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= render partial: 'shared/track', locals: { item: @entity } %>

  <section>
    <h2><%= t(:item, count: @entity.items_count) %></h2>

    <%= render partial: 'admin/order_items/list', locals: { collection: @entity.order_items } %>
  </section>
</article>
