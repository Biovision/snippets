<% content_for :meta_title, t('.title', name: @entity.name) %>

<article class="entity-page">
  <h1><%= @entity.name %></h1>
  <ul class="actions">
    <li><%= create_icon new_item_type_path %></li>
    <li><%= list_icon admin_item_types_path %></li>
    <% unless @entity.locked? %>
        <li><%= edit_icon edit_item_type_path(@entity) %></li>
        <li class="danger"><%= destroy_icon @entity %></li>
    <% end %>
  </ul>

  <p><%= link_to t(:item, count: @entity.items_count), items_admin_item_type_path(@entity) %></p>
</article>
