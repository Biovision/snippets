<div class="toggleable" data-url="<%= toggle_api_brand_path(brand) %>">
  <% Brand.toggleable_attributes.each do |flag| %>
  <span class="<%= brand.attributes[flag.to_s] ? 'active' : 'inactive' %>" data-flag="<%= flag %>">
    <%= t("activerecord.attributes.brand.#{flag}") %>
  </span>
  <% end %>
</div>
