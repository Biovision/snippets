<div class="image">
  <%= image_tag brand.image.small.url, alt: brand.name %>
</div>
<div class="data">
  <div><%= link_to brand.name, admin_brand_path(brand) %></div>
  <div class="info">
    <%= link_to t(:item, count: brand.items_count), items_admin_brand_path(brand) %>
  </div>
  <%= render partial: 'admin/brands/toggleable', locals: { brand: brand } %>

  <ul class="actions">
    <li class="lockable <%= brand.locked? ? 'hidden' : '' %>">
      <%= edit_icon edit_brand_path(brand) %>
    </li>
    <%= render partial: 'shared/actions/priority_changer', locals: { path: priority_api_brand_path(brand) } %>
    <%= render partial: 'shared/actions/locks', locals: { entity: brand, path: lock_api_brand_path(brand) } %>
  </ul>
</div>
