<% content_for :meta_title, t('.title', name: @entity.name, page: current_page) %>

<article class="entity-page">
  <h1><%= @entity.name %></h1>
  <ul class="actions">
    <li><%= back_icon admin_brand_path(@entity) %></li>
  </ul>

  <section>
    <h2><%= t('admin.items.index.heading') %></h2>

    <%= paginate @collection %>
    <%= render partial: 'admin/items/list', locals: { collection: @collection } %>
    <%= paginate @collection %>
  </section>

  <section>
    <h2><%= t('items.new.title') %></h2>

    <%= render partial: 'items/form', locals: { entity: @entity.items.new } %>
  </section>
</article>
